{
	"name": "emoji-linting",
	"displayName": "Emoji Linting",
	"description": "EmojiLinting is extension for Visual Studio Code that enables users to mark and score code in their project. Emojis create an easy to use friendly system that everyone can unserstand. ",
	"publisher": "Adacta Fintech",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onCommand:emojilinting.startLinting"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "emojilinting.startLinting",
				"title": "Activate Linting"
			},
			{
				"command": "emojilinting.smily",
				"title": "Awesome ðŸ¤©"
			},
			{
				"command": "emojilinting.mehemoji",
				"title": "Confused - ðŸ¤¨"
			},
			{
				"command": "emojilinting.angry",
				"title": "Bad - ðŸ‘Ž"
			},
			{
				"command": "emojilinting.clear-emoji",
				"title": "Clear my emoji"
			},
			{
				"command": "emojilinting.showStats",
				"title": "Show Statistics"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "emojilinting.smily",
					"group": "bookmarks@1",
					"when": "editorTextFocus && emojilinting:isMenuAllowed"
				},
				{
					"command": "emojilinting.mehemoji",
					"group": "bookmarks@2",
					"when": "editorTextFocus && emojilinting:isMenuAllowed"
				},
				{
					"command": "emojilinting.angry",
					"group": "bookmarks@3",
					"when": "editorTextFocus && emojilinting:isMenuAllowed"
				},
				{
					"command": "emojilinting.clear-emoji",
					"group": "bookmarks@4",
					"when": "editorTextFocus && emojilinting:isMenuAllowed"
				}
			]
		},
		"keybindings": [
			{
				"command": "emojilinting.smily",
				"key": "ctrl+shift+1",
				"mac": "shift+cmd+f"
			},
			{
				"command": "emojilinting.mehemoji",
				"key": "ctrl+shift+2",
				"mac": "shift+cmd+r"
			},
			{
				"command": "emojilinting.angry",
				"key": "ctrl+shift+3",
				"mac": "shift+cmd+l"
			},
			{
				"command": "emojilinting.clear-emoji",
				"key": "ctrl+shift+4",
				"mac": "shift+cmd+l"
			}
		],
		"configuration": {
			"title": "Emoji-Extension",
			"properties": {
				"EmojiSettings.langIdcsharp": {
					"title": "C#",
					"type": "boolean",
					"default": true,
					"description": "C# files"
				},
				"EmojiSettings.langIdjavascript": {
					"title": "Javascript:",
					"type": "boolean",
					"default": false,
					"description": "Javascript files"
				},
				"EmojiSettings.langIdphp": {
					"title": "Php",
					"type": "boolean",
					"default": false,
					"description": "PHP files"
				},
				"EmojiSettings.langIdpython": {
					"title": "Python:",
					"type": "boolean",
					"default": true,
					"description": "Python files"
				},
				"EmojiSettings.langIdjava": {
					"title": "Java:",
					"type": "boolean",
					"default": true,
					"description": "Java files"
				},
				"EmojiSettings.langIdcpp": {
					"title": "C++:",
					"type": "boolean",
					"default": true,
					"description": "C++ files"
				},
				"EmojiSettings.langIdcss": {
					"title": "CSS:",
					"type": "boolean",
					"default": true,
					"description": "CSS files"
				},
				"EmojiSettings.langIdhtml": {
					"title": "HTML:",
					"type": "boolean",
					"default": true,
					"description": "HTML files"
				},
				"EmojiSettings.langIdtypescript": {
					"title": "TypeScript:",
					"type": "boolean",
					"default": true,
					"description": "TypeScript files"
				},
				"EmojiSettings.langIdmarkdown": {
					"title": "Markdown:",
					"type": "boolean",
					"default": true,
					"description": "Markdown files"
				},
				"EmojiSettings.ApiURL": {
					"title": "APIUrl",
					"type": "string",
					"default": "http://localhost:7071/api/v1/markerService",
					"description": "Base url of rest api that is in charge of persiting emoji linting data"
				},
				"EmojiSettings.AzureAuthority": {
					"title": "Azure Authority",
					"type": "string",
					"default": "",
					"description": "Authority for giving access token. Can be found on azure portal. Example https://login.microsoftonline.com/{tenant-Id}"
				},
				"EmojiSettings.AzureScope": {
					"title": "Azure Scope",
					"type": "string",
					"default": "",
					"description": "Scope of the generated access tokens. Can be found on azure portal: Exmaple api://{scope}"
				},
				"EmojiSettings.AzureClientId": {
					"title": "Azure Client Id",
					"type": "string",
					"default": "",
					"description": "Client id found on Azure portal dashboard"
				},
				"EmojiSettings.AzureClientSecret": {
					"title": "Azure Client Secret",
					"type": "string",
					"default": "",
					"description": "Client secret that is generated by identity provider"
				},
				"EmojiSettings.AzureRedirectURI": {
					"title": "Azure Redirect URI",
					"type": "string",
					"default": "",
					"description": "Authentication callback set in the azure portal authentication menu."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"nyc": "^15.1.0",
		"ts-mockito": "^2.6.1",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"@azure/msal-node": "^1.6.0",
		"class-transformer": "^0.4.0",
		"cross-fetch": "^3.1.5",
		"reflect-metadata": "^0.1.13",
		"rewire": "^5.0.0",
		"simple-git": "^2.47.0"
	}
}
